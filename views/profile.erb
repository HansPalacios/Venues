<div class="row profile">
  <div class="col-md-6">
    <h4 id="acct">Welcome <%= @current_user.username %>!!</h4>
    <div id="edit-input" >
    <div class="thumbnail">
      <p>Account details:</p>
      <form>
        <div class="form-group">
          <label>Username</label>
          <input type="username" class="form-control" id="profileName" placeholder="username">
        </div>
        <div class="form-group">
          <label>Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1"
          placeholder="Password">
        </div>
        <div class="form-group">
          <label>First Name</label>
          <input type="fname" class="form-control" id="fname" placeholder="First Name">
        </div>
        <div class="form-group">
          <label>Last Name</label>
          <input type="lname" class="form-control" id="exampleInputPassword1" placeholder="Last Name">
        </div>
        <br>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="pull-right">
              <button type="submit" class="save">Save</button>
              <button type="submit" class="delete">Delete</button>
            </div>
          </div>
        </div>
    </div>
    </form>
  </div>
  <div id="acct-info" >
    <h4>Username:</h4>
    <p><%= @current_user.username %></p>
    <br>
    <h4>Email:</h4>
    <p><%= @current_user.email %></p>
    <br>
    <h4>First Name</h4>
    <p><%= @current_user.fname %></p>
    <br>
    <h4>Last Name</h4>
    <p><%= @current_user.lname %></p>
    <button type="text" id="edit">Edit</button>
  </div>

  </div>
  <div class="col-md-6 myposts">
    <h4>Posts</h4>
      <div class="article">
        <% @posts.each do |post| %>
          <article><a href="/post/<%= post.id %>">
          <h5><%= post.title %></h5>
          <p><%= post.content %></p>
          </a></article>
        <% end %>
      </div>
  </div>
</div>
