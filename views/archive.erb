<div class="row">
  <div class="col-md-2">
    <div id="months" class="col-md-1">
		<div class="row">
			<h5>Months</h5>
		</div>
		<div class="row">
			<a href="/archive/july"><h5>July</h5></a>
		</div>
		<div class="row">
			<a href="/archive/august"><h5>Aug</h5></a>
		</div>
		<div class="row">
			<a href="/archive/september"><h5>Sep</h5></a>
		</div>
		<div class="row">
			<a href="/archive/october"><h5>Oct</h5></a>
		</div>
	</div>
  </div>
  <div class="col-md-10">
    <div class="posts">
    	<% @posts.select{|post,hash| hash[:categories]}.each do|post, hash| %>
   			<article><a href="/posts/<%=post.id%>"><div style="background-image:url(<%= hash[:image] %>)"><div> <%= hash[:name] %> </div></div></a></article>
   		<%end%>
    </div>
  </div>
</div>
